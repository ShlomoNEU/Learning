<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentListRL"
    app:cardBackgroundColor="#B2DFDB"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="10dp"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="fourdigits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Card_fourdigits"
            app:layout_constraintTop_toBottomOf="@+id/Card_Title"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" />

        <TextView
            android:text="card type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Card_card_compeny"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/Card_Title"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="normal|bold|italic"
            android:textAllCaps="true" />

        <TextView
            android:text="amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Card_amount"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center" />

        <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Card_Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>